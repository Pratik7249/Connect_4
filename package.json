{
  "name": "multiplayer-connect-four",
  "version": "1.0.0",
  "description": "Real-time 4 in a Row multiplayer game with WebSocket, bot AI, and analytics",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "server:start": "node server/index.js",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "game",
    "multiplayer",
    "websocket",
    "react",
    "node"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.10"
  }
}
